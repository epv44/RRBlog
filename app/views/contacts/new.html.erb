<% provide(:title, 'Questions, comments, concerns?') %>
<div align="left">
  <h3>Send Us A Message!</h3>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :required => true, wrapper_html: { class: 'special-label' } %>
    <%= f.input :email, :required => true, wrapper_html: { class: 'special-label' }  %>
    <%= f.input :message, :as => :text, :required => true, wrapper_html: { class: 'special-label' }  %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div class = "text-center">
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>